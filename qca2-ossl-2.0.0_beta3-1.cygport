inherit qt4-qmake

DESCRIPTION="Qt Cryptographic Architecture OpenSSL plugin"
HOMEPAGE="http://delta.affinix.com/qca"
SRC_URI="http://delta.affinix.com/download/qca/${PV_MAJ_MIN}/plugins/${PN/2}-${PV/_/-}.tar.bz2"
SRC_DIR="${PN/2}-${PV/_/-}"

src_compile() {
	lndirs
	cd ${B}
	./configure \
		--qtdir=${QT4_QTDIR} \
		--no-separate-debug-info \
		|| error "configure failed"
	cygmake
}
